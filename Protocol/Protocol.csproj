<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="entity.proto" />
    <None Remove="error.proto" />
    <None Remove="greet.proto" />
    <None Remove="login.proto" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.AspNetCore" Version="2.40.0" />
    <PackageReference Include="Grpc.Tools" Version="2.42.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="entity.proto" />
    <Protobuf Include="error.proto" />
    <Protobuf Include="greet.proto">
      <GrpcServices>Both</GrpcServices>
    </Protobuf>
    <Protobuf Include="login.proto" />
  </ItemGroup>

</Project>
